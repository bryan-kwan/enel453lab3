
module digit_manager #(parameter width = 16, // Width of the data to be displayed
							  parameter select_width = 2, // Width of the select line for choosing modes
							  parameter displays = 6, // Number of seven segment displays
							  parameter DP_1 = 0, // Number of decimals for mode 1; 0 means no decimal point
							  parameter DP_2 = 3,
							  parameter DP_3 = 2,
							  parameter DP_4 = 2)
							 (input logic [width-1:0] data,
							  input logic [select_width-1:0] select,
							  output logic [displays-1:0] DP_in, // Decimal point flag for each display (gets inverted in SevenSeg)
							  output logic [displays-1:0] Blank // Blank display flag (1=blank, 0=display)
							  );

	

endmodule
							  